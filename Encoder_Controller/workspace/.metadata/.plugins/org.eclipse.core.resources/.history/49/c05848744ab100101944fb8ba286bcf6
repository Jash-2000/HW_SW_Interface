/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "xil_exception.h"
#include "xintc.h"      // MicroBlaze interrupt controller
#include "xgpio.h"      // AXI GPIO
#include "xtmrctr.h"    // AXI Timer

XGpio Gpio_LED;	// LED Driver Pin initialization
XGpio Gpio_Encoder; // Encoder Driver Pin Initialization
XGpio Gpio_SW;
XIntc sys_intc;

static bit led_status_flag = 1;
int led_pos = 0x1;

void led_apply(void);
void led_left(void);
void led_right(void);
void display_off(void);
void display_restore(void);

int main()
{
    init_platform();
    XStatus Status_LED, Status_SW, Status_Encoder;

    //INITIALIZATION FOR AXI GPIO
    Status_LED = XGpio_Initialize(&Gpio_LED, XPAR_AXI_GPIO_LED_DEVICE_ID);
    if (Status_LED != XST_SUCCESS) return XST_FAILURE;

    Status_SW = XGpio_Initialize(&Gpio_SW, XPAR_AXI_GPIO_SWITCH_DEVICE_ID);
    if (Status_SW != XST_SUCCESS) return XST_FAILURE;

    Status_Encoder = XGpio_Initialize(&Gpio_Encoder, XPAR_ENCODER_DEVICE_ID);
    if (Status_Encoder != XST_SUCCESS) return XST_FAILURE;

    while(1){
    	XGpio_DiscreteWrite(&Gpio_LED, 1, 0x1); //Turns on one LED
    	usleep(500000); // Delay for 500,000 microseconds (0.5 seconds)
    	XGpio_DiscreteWrite(&Gpio_LED, 1, 0x0); //Turns off one LED
    	sleep(2); // Delay for 2 seconds
    }

    cleanup_platform();
    return 0;
}

void led_left()
{
    if (!led_status_flag) return;
    if (led_pos == x1<<15) led_pos = NUM_USER_LEDS - 1;
    else led_pos = led_pos<<1;
}

void led_right(void)
{
    if (!led_status_flag) return;
    if (led_pos == 0x1) led_pos = NUM_USER_LEDS - 1;
    else led_pos = led_pos>>1;
}

void display_off(void)
{
    if (!display_on) return;
    saved_pos = led_pos;
    display_on = false;
}
void display_restore(void)
{
    if (display_on) return;
    led_pos = saved_pos % NUM_USER_LEDS;
    display_on = true;
}

